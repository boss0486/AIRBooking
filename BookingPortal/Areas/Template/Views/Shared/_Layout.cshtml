    <section class="content main-content">
        <div class="container-fluid p-t-10">
            @if (Helper.Current.UserLogin.IsCustomerLogged())
            {
                double spendingBalance = 0;
                double depositBalance = 0;

                // check if is booker
                string userId = Helper.Current.UserLogin.IdentifierID;

                if (Helper.Current.UserLogin.IsAdminCustomerLogged())
                {
                    WebCore.Entities.WalletCustomerMessageModel walletCustomerMessageModel = WalletService.GetBalanceOfCustomerByUserID(userId);
                    if (walletCustomerMessageModel.Status)
                    {
                        spendingBalance = walletCustomerMessageModel.SpendingBalance;
                        depositBalance = walletCustomerMessageModel.DepositBalance;
                    }
                    <div class="row">
                        <div class="container-fluid">
                            <ul class="nav navbar-group">
                                <li><a class="bg-teal">Nạp: @Helper.Page.Library.FormatCurrency(depositBalance) đ</a></li>
                                <li><a class="bg-green">Số dư: @Helper.Page.Library.FormatCurrency(spendingBalance) đ</a></li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    WebCore.Entities.WalletUserMessageModel  walletUserMessageModel = WalletService.GetBalanceOfUserByUserID(userId);
                    if (walletUserMessageModel.Status)
                    {
                        spendingBalance = walletUserMessageModel.Balance;
                    }
                    <div class="row">
                        <div class="container-fluid">
                            <ul class="nav navbar-group">
                                <li><a class="bg-green">Số dư: @Helper.Page.Library.FormatCurrency(spendingBalance) đ</a></li>
                            </ul>
                        </div>
                    </div>
                }

            }

            <div class="block-header">
                <h2><i class="fas fa-ellipsis-v"></i> @Helper.Page.MetaSEO.PageTitle</h2>
                <hr />
            </div>
        </div>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>

