@{
    ViewBag.Title = Helper.MetaSEO.MetaTitle;
}
<div class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="header">
                <div class="row clearfix">
                    <div class="col-xs-12">
                        <h2>Create</h2>
                    </div>
                </div>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label class="form-label">Tiêu đề</label>
                                        <input id="txtTitle" name="txtTitle" maxlength="50" type="text" class="form-control" />
                                    </div>
                                    <span id="lblTitle" class="message msg-box"></span>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label class="form-label">Mô tả</label>
                                        <textarea id="txtSummary" name="txtSummary" class="form-control"></textarea>
                                    </div>
                                    <span id="lblSummary" class="message msg-box"></span>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <div class="form-control">
                                            <label id="cbxActive" class="cursor "><i class="far fa-square" data-val="0"></i> &nbsp; Active</label>
                                        </div>
                                    </div>
                                    <span id="lblActive" class="message msg-box"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button id="btnCreate" class="btn btn-primary" type="button">Tạo mới</button>
                        <button id="btnReset" class="btn btn-danger" type="reset">Làm mới</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/BackEnd/_script/product-warranty.js"></script>
}

