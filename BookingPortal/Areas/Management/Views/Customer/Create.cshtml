@using WebCore.Entities;
@using WebCore.Services;
@using WebCore.ENM;

@using WebCore.Model.Enum;
@using WebCore.Model.Services
@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}
@{
    int typeLogin = 0;
}
<div class="row">
    <div class="col-md-9">
        <div class="top-pic special">
            <label><i class="fas fa-server"></i>&nbsp;<span>Dịch vụ:</span></label>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group ">
                    <label class="form-label">Loại khách hàng:</label>
                    <select id="ddlCustomerType" name="ddlCustomerType" class="form-control show-tick" data-live-search="true" data-action="@Helper.Page.MetaSEO.ActionText">
                        <option value="">-@Helper.Language.Resource.Label.Option-</option>
                        @Html.Raw(AgentProvideTypeService.DropdownList(""));
                    </select>
                    <span id="lblCustomerType" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Thời hạn TT(ngày):</label>
                    <input id="txtTermPayment" name="txtTermPayment" maxlength="3" type="text" class="form-control" value="45" />
                    <span id="lblTermPayment" class="message msg-box"></span>
                </div>
            </div> 
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Đặt cọc:</label>
                    <input id="txtDeposit" name="txtDeposit" data-currency="true" maxlength="15" type="text" class="form-control" value="100 000 000" />
                    <span id="lblDeposit" class="message msg-box"></span>
                </div>
            </div>
        </div>
       
        @if (!Helper.Current.UserLogin.IsCustomerLogged())
        {
            typeLogin = 1;

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="form-label" id="LblClientText">Đại lý:</label>
                        <select id="ddlSupplier" name="ddlSupplier" class="form-control show-tick" data-live-search="true">
                            <option value="">-@Helper.Language.Resource.Label.Option-</option> 
                        </select>
                        <span id="lblSupplier" class="message msg-box"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">Mã nhà cung cấp:</label> #
                        <div class="form-control disabled" style="background: #FFE5F1"><label id="lblProviderCodeID">---</label></div>
                    </div>
                </div>
            </div>
        }

        <div class="top-pic special">
            <label><i class="fas fa-building"></i>&nbsp;<span>Thông tin khách hàng:</span></label>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label class="form-label">Tên khách hàng:</label>
                    <input id="txtTitle" name="txtTitle" maxlength="80" type="text" class="form-control" value="Focus Travel Việt Nam" />
                    <span id="lblTitle" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Mã khách hàng:</label>
                    <input id="txtCodeID" name="txtCodeID" maxlength="3" type="text" class="form-control" style="background: #CCFFCD" value="FOC" />
                    <span id="lblCodeID" class="message msg-box"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Mô tả</label>
            <textarea id="txtSummary" name="txtSummary" class="form-control default">Focus Travel Việt Nam Company</textarea>
            <span id="lblSummary" class="message msg-box"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Mã số thuế:</label>
                    <input id="txtTaxCode" name="txtTaxCode" maxlength="20" type="text" class="form-control" value="3213213213213" />
                    <span id="lblTaxCode" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Số đ.thoại cty:</label>
                    <input id="txtCompanyPhone" name="txtCompanyPhone" maxlength="20" type="text" class="form-control" value="0983498218" />
                    <span id="lblCompanyPhone" class="message msg-box"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-label">Địa chỉ:</label>
            <input id="txtAddress" name="txtAddress" maxlength="255" type="text" class="form-control" value="Tầng 16 tòa nhà Ladeco, Số 266, Phố Đội Cấn, Phường Liễu Giai, Hồ Chí Minh" />
            <span id="lblAddress" class="message msg-box"></span>
        </div>
        <div class="top-pic special">
            <label><i class="fas fa-address-book"></i>&nbsp;<span>Thông tin liên hệ:</span></label>
        </div>

        <div class="form-group">
            <label class="form-label">Tên liên hệ:</label>
            <input id="txtContactName" name="txtContactName" maxlength="50" type="text" class="form-control" value="Nam Travel" />
            <span id="lblContactName" class="message msg-box"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">E-mail:</label>
                    <input id="txtContactEmail" name="txtContactEmail" maxlength="255" type="text" class="form-control" value="focus_contact@gmail.com" />
                    <span id="lblContactEmail" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Đ.thoại:</label>
                    <input id="txtContactPhone" name="txtContactPhone" maxlength="20" type="text" class="form-control" value="0983498265" />
                    <span id="lblContactPhone" class="message msg-box"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <hr />
        </div>
        <div class="top-pic special">
            <label><i class="fas fa-user"></i>&nbsp;<span>Thông tin truy cập:</span></label>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Tài khoản:</label>
                    <input id="txtAccount" name="txtAccount" maxlength="16" type="text" class="form-control" value="focus" />
                    <span id="lblAccount" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Mật khẩu:</label>
                    <input id="txtPassword" name="txtPassword" maxlength="16" type="text" class="form-control" value="Viet@1122" />
                    <span id="lblPassword" class="message msg-box"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="form-label">Địa chỉ email:</label>
                    <input id="txtEmail" name="txtEmail" maxlength="255" type="text" class="form-control" value="focus_account@gmail.com" />
                    <span id="lblEmail" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Số điện thoại(OTP):</label>
                    <input id="txtPhone" name="txtPhone" maxlength="20" type="text" class="form-control" value="0983498223" />
                    <span id="lblPhone" class="message msg-box"></span>
                </div>
            </div>
        </div>
        <div class="form-group m-t-5">
            <input id="cbxActive" name="cbxActive" type="checkbox" class="filled-in" checked />
            <label for="cbxActive">Kích hoạt</label>
            <span id="lblActive" class="message msg-box"></span>
        </div>
    </div>
 
</div>
<div class="form-group text-right">
    <button id="btnReset" class="btn btn-danger" type="reset">@Helper.Language.Resource.Label.BtnReset</button>
    <button id="btnCreate" class="btn btn-primary" type="button">@Helper.Language.Resource.Label.BtnCreate</button>
</div>
@{
    if (PermissionService.CheckActionInMenuItem(Helper.Page.MetaSEO.ControllerText, WebCore.Entities.RoleActionKey.DataList))
    {
        <div class="form-group text-right att-data-list">
            <a href="@Helper.Page.Navigate.PathDataList()">
                @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    }
}
@section scripts{
    <script src="~/Areas/Management/_script/customer.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            //if ($("select#ddlSupplier").val() != undefined) {
            //    $("select#ddlSupplier")[0].selectedIndex = 1;
            //    $("select#ddlSupplier").change();
            //}
            //if ($("select#ddlCustomerType").val() != undefined) {
            //    $("select#ddlCustomerType")[0].selectedIndex = 1;
            //    $("select#ddlCustomerType").change();
            //}
            //
            var typeLogin = @typeLogin;
            if (parseInt(typeLogin) == 1) {
                $(".client-group input[name='rdoClientType']:first").change();
            }
        });
    </script>
}

