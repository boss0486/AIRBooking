@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}

@using WebCore.ENM;
@using WebCore.Entities;
@using WebCore.Services;

@{
    int typeLogin = 0;
}
<div class="row">
    <div class="col-md-8">

        @if (!Helper.Current.UserLogin.IsClientInApplication())
        {
            typeLogin = 1;
            <div class="top-pic special">
                <label><i class="fas fa-building"></i>&nbsp;<span>Loại người dùng:</span></label>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group client-group m-t-15">
                        <div class="row">
                            <div class="col-md-6">
                                <input class="form-check-input" type="radio" name="rdoClientType" id="rdoClientCustomer" value="1" data-text="Khách hàng" checked />
                                <label class="form-check-label" for="rdoClientCustomer">Khách hàng</label>
                                <hr style="margin-top: 10px;">
                            </div>
                            <div class="col-md-6">
                                <input class="form-check-input" type="radio" name="rdoClientType" id="rdoClientSupplier" value="2" data-text="Nhà cung cấp" />
                                <label class="form-check-label" for="rdoClientSupplier">Nhà cung cấp</label>
                                <hr style="margin-top: 10px;">
                            </div>
                        </div>
                        <span id="lblClientType" class="message msg-box"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label" id="LblClientText">Khách hàng:</label>
                        <select id="ddlClient" name="ddlClient" class="form-control show-tick" data-live-search="true">
                            <option value="">-Lựa chọn-</option>
                        </select>
                        <span id="lblClient" class="message msg-box"></span>
                    </div>
                </div>
            </div>



        }
        <div class="top-pic special">
            <label><i class="fas fa-user-circle" aria-hidden="true"></i>&nbsp;<span>Tài khoản:</span></label>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="form-label">Tài khoản:</label>
                    <input id="txtLoginID" name="txtLoginID" maxlength="50" type="text" class="form-control" value="" />
                    <span id="lblLoginID" class="message msg-box"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="form-label">Mật khẩu:</label>
                    <input id="txtPassword" name="txtPassword" maxlength="50" type="password" class="form-control" value="" />
                    <span id="lblPassword" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="form-label">XN-Mật khẩu:</label>
                    <input id="txtRePassword" name="txtRePassword" maxlength="50" type="password" class="form-control" value="" />
                    <span id="lblRePassword" class="message msg-box"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="top-pic">
            <i class="fas fa-file-invoice"></i>&nbsp;<label>Hồ sơ:</label>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group text-center" style="background:#CCC; padding:30px 0px; height:220px">
                    <img src="@Helper.Page.Default.FileUserImange" class="img-responsive infor-img" />
                </div>
                <div class="form-group m-t-5">
                    <label class="form-label">Ảnh đại diện:<span class="note"></span> </label>
                    <span id="lblFile" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group ">
                    <label class="form-label">Họ/Tên:</label>
                    <input id="txtFullName" name="txtFullName" maxlength="50" type="text" class="form-control" value="" />
                    <span id="lblFullName" class="message msg-box"></span>
                </div>
                <div class="form-group ">
                    <label class="form-label">Ngày sinh:</label>
                    <input id="txtBirthday" name="txtBirthday" data-date="true" maxlength="10" type="text" class="form-control" value="" />
                    <span id="lblBirthday" class="message msg-box"></span>
                </div>
                <div class="form-group ">
                    <label class="form-label">Địa chỉ email:</label>
                    <input id="txtEmail" name="txtEmail" maxlength="50" type="text" class="form-control" value="" />
                    <span id="lblEmail" class="message msg-box"></span>
                </div>
            </div>
        </div>
        <div class="form-group ">
            <label class="form-label">Số điện thoại:</label>
            <input id="txtPhone" name="txtPhone" maxlength="50" type="text" class="form-control" value="" />
            <span id="lblPhone" class="message msg-box"></span>
        </div>
        <div class="form-group ">
            <label class="form-label">Địa chỉ:</label>
            <input id="txtAddress" name="txtAddress" maxlength="250" type="text" class="form-control" value="" />
            <span id="lblAddress" class="message msg-box"></span>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="top-pic">
                    <i class="fa fa-cog" aria-hidden="true"></i>&nbsp;<label>Hoạt động:</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="form-label" style="width:100%">Tình trạng:</label>
                    <input id="cbxBlock" name="cbxBlock" type="checkbox" class="filled-in" />
                    <label for="cbxBlock">Khóa</label>
                    <span id="lblBlock" class="message msg-box"></span>
                    <hr />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="form-label" style="width:100%">Trạng thái:</label>
                    <input id="cbxActive" name="cbxActive" type="checkbox" class="filled-in" />
                    <label for="cbxActive">Kích hoạt</label>
                    <span id="lblActive" class="message msg-box"></span>
                    <hr />
                </div>
            </div>
        </div>
        <div class="form-group text-right">
            <button id="btnReset" class="btn btn-danger" type="reset">@Helper.Language.Resource.Label.BtnReset</button>
            <button id="btnCreate" class="btn btn-primary" type="button">@Helper.Language.Resource.Label.BtnCreate</button>
        </div>
        @{
            if (PermissionService.CheckActionInMenuItem(Helper.Page.MetaSEO.ControllerText, WebCore.Entities.RoleActionKey.DataList))
            {
                <div class="form-group text-right att-data-list">
                    <a href="@Helper.Page.Navigate.PathDataList()">
                        @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            }
        }
    </div>
</div>

<input id="typeLogin" value="@typeLogin" type="hidden" />
@section scripts{
    <script src="~/Areas/Management/_script/app-user.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //
            var typeLogin = @typeLogin;
            if (parseInt(typeLogin) == 1) {
                $('#ddlClient').html(`<option value="">-Lựa chọn-</option>`);
                $(".client-group input[name='rdoClientType']:first").change();
            }
        });
    </script>
}
