@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}
@using WebCore.Services;
@{
    string customerCodeID = string.Empty;
}
<div class="row">
    <div class="col-md-6">
        @if (!Helper.Current.UserLogin.IsSupplierLogged())
        {
            <div class="top-pic">
                <i class="fas fa-file-invoice"></i>&nbsp;<label>T.Tin cấp:</label>
            </div>
            <div class="row">
                <div class="col-md-7">
                    <div class="form-group">
                        <label class="form-label">Nhà cung cấp:</label>
                        <select id="ddlSupplier" name="ddlSupplier" class="form-control show-tick" data-live-search="true">
                            <option value="">-Lựa chọn-</option>
                            @Html.Raw(SupplierService.DropdownList(""))
                        </select>
                        <span id="lblSupplier" class="message msg-box"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-label">MKH:</label>
                        <div class="form-control disabled" style="background: #FFE5F1"><label id="lblSupplierCodeID">@customerCodeID</label></div>
                    </div>
                </div>
            </div>
            <div class="top-pic">
                <i class="fas fa-file-invoice"></i>&nbsp;<label>T.Tin nhận:</label>
            </div>
        }
         
        <div class="row">
            <div class="col-md-7">
                <div class="form-group">
                    <label class="form-label">Khách hàng:</label>
                    <select id="ddlCustomer" name="ddlCustomer" class="form-control show-tick" data-live-search="true">
                        <option value="">-Lựa chọn-</option>
                        @Html.Raw(CustomerService.DropdownListWithTypeID((int)WebCore.ENM.CustomerEnum.CustomerType.AGENT, ""))
                    </select>
                    <span id="lblCustomer" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="form-label">MKH:</label>
                    <div class="form-control disabled" style="background: #FFE5F1"><label id="lblCustomerCodeID"></label></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-label">Hạn mức(vnd):</label>
            <input id="txtAmount" name="txtAmount" data-currency="true" maxlength="50" type="text" class="form-control" value="0" />
            <span id="lblAmount" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Mô tả</label>
            <textarea id="txtSummary" name="txtSummary" class="form-control default"></textarea>
            <span id="lblSummary" class="message msg-box"></span>
        </div>
        <div class="form-group ">
            <input id="cbxActive" name="cbxActive" type="checkbox" class="filled-in" checked disabled />
            <label for="cbxActive">Hoàn tất giao dịch</label>
            <span id="lblActive" class="message msg-box"></span>
        </div>
        <div class="form-group text-right">
            <button id="btnReset" class="btn btn-danger" type="reset">@Helper.Language.Resource.Label.BtnReset</button>
            <button id="btnCreate" class="btn btn-primary" type="button">Cấp hạn mức</button>
        </div>
        <div class="form-group text-right att-data-list">
            <a href="@Helper.Page.Navigate.PathDataList()">
                @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/Areas/Management/_script/trans-spending.js"></script>
    <script type="text/javascript">

    </script>
}
