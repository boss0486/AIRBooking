@using WebCore.Entities;
@using WebCore.Services;
@using WebCore.Model.Enum;
@using WebCore.Model.Services
@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}

@{
    string customerCodeID = string.Empty;
    string agentCode = string.Empty;
    string agentName = string.Empty;
    if (Helper.Current.UserLogin.IsAgentLogged())
    {
        AirAgentService airAgentService = new AirAgentService();
        string agentId = AirAgentService.GetAgentIDByUserID(Helper.Current.UserLogin.IdentifierID);
        AirAgent airAgent = airAgentService.GetAgentByID(agentId);
        agentName = airAgent.Title;
        agentCode = airAgent.CodeID;
    }
}
<div class="row">
    <div class="col-md-8">
        <div class="row">

            <div class="col-md-7">
                <div class="form-group">
                    <label class="form-label">Đại lý:</label>
                    <select id="ddlAgent" name="ddlAgent" class="form-control show-tick" data-live-search="true">
                        <option value="">-@Helper.Language.Resource.Label.Option-</option>
                        @Html.Raw(AirAgentService.DropdownList_HasSpend(""));
                    </select>
                    <span id="lblAgent" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="form-label">Tổng hạn mức:</label>
                    <div class="form-control disabled"><label id="lblAgentSpend">---</label></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <div class="form-group">
                    <label class="form-label">Nhân viên:</label>
                    <select id="ddlEmployee" name="ddlEmployee" class="form-control show-tick" data-live-search="true">
                        <option value="">-@Helper.Language.Resource.Label.Option-</option>
                    </select>
                    <span id="lblEmployee" class="message msg-box"></span>
                </div>

            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="form-label">Hạn mức(đ):</label>
                    <input id="txtAmount" name="txtAmount" data-currency="true" maxlength="50" type="text" class="form-control" value="0" />
                    <span id="lblAmount" class="message msg-box"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Mô tả</label>
            <textarea id="txtSummary" name="txtSummary" class="form-control default"></textarea>
            <span id="lblSummary" class="message msg-box"></span>
        </div>
        <div class="form-group ">
            <input id="cbxActive" name="cbxActive" type="checkbox" class="filled-in" checked data-notreload="true" disabled />
            <label for="cbxActive">Hoàn tất giao dịch</label>
            <span id="lblActive" class="message msg-box"></span>
        </div>
        <div class="form-group text-right">
            <button id="btnReset" class="btn btn-danger" type="reset">@Helper.Language.Resource.Label.BtnReset</button>
            <button id="btnApply" class="btn btn-primary" type="button">@Helper.Language.Resource.Label.BtnApply</button>
        </div>
        @{
            if (PermissionService.CheckActionInMenuItem(Helper.Page.MetaSEO.ControllerText, WebCore.Entities.RoleActionKey.DataList))
            {
                <div class="form-group text-right att-data-list">
                    <a href="@Helper.Page.Navigate.PathDataList()">
                        @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            }
        }
    </div>
</div>
@section scripts{
    <script src="~/Areas/Management/_script/trans-user-spending.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#ddlAgent")[0].selectedIndex = 1;
            $("#ddlAgent").change();
        })
    </script>
}
