@{
    ViewBag.Title = Helper.MetaSEO.MetaTitle;
}
@using Webcore.Services;
@using Webcore.Model.Enum;
@{
    string id = string.Empty;
    string title = string.Empty;
    string summary = string.Empty;
    string enable = string.Empty;
    string clsEnable = string.Empty;
    try
    {
        id = this.Url.RequestContext.RouteData.Values["id"].ToString();
        var productProviderService = new ProductProviderService();
        var model = productProviderService.UpdateForm(id);
        title = model.Title;
        summary = model.Summary;
        string cls = "fa-square";
        int value = 0;
        if (model.Enabled == (int)ModelEnum.Enabled.ENABLED)
        {
            cls = "fa-check-square";
            value = 1;
            clsEnable = " actived";
        }
        enable = "<i class='far " + cls + "' data-val='" + value + "'></i>";
    }
    catch (Exception)
    {
        Response.Redirect("/not-found");
    }
}
<div class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="header">
                <div class="row clearfix">
                    <div class="col-xs-12">
                        <h2>Danh sách</h2>
                    </div>
                </div>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label class="form-label">Tiêu đề</label>
                                        <input id="txtTitle" name="txtTitle" maxlength="50" type="text" class="form-control" value="@title" />
                                    </div>
                                    <span id="lblTitle" class="message msg-box"></span>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label class="form-label">Mô tả</label>
                                        <textarea id="txtSummary" name="txtSummary" class="form-control">@summary</textarea>
                                    </div>
                                    <span id="lblSummary" class="message msg-box"></span>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <div class="form-control">
                                            <label id="cbxActive" class="cursor @clsEnable ">@Html.Raw(enable) &nbsp; Active</label>
                                        </div>
                                    </div>
                                    <span id="lblActive" class="message msg-box"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button id="btnUpdate" class="btn btn-primary" type="button">Cập nhật</button>
                        <button id="btnReset" class="btn btn-danger" type="reset">Làm mới</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<input id="txtID" type="hidden" value="@id" />
@section scripts{
    <script src="~/Areas/BackEnd/_script/product-provider.js"></script>
}


