@{
    ViewBag.Title = Helper.MetaSEO.MetaTitle;
}
@using Webcore.Services;
@{
    string id = string.Empty;
    string title = string.Empty;
    string summary = string.Empty;
    string enable = string.Empty;
    string clsEnable = string.Empty;
    try
    {
        id = this.Url.RequestContext.RouteData.Values["id"].ToString();
        var productProviderService = new ProductProviderService();
        var productProvider = productProviderService.UpdateForm(id);
        if (productProvider == null)
        {
            Response.Redirect("/not-found");
        }
        else
        {
            title = productProvider.Title;
            summary = productProvider.Summary;
            string cls = "fa-square";
            int value = 0;
            if (productProvider.Enabled)
            {
                cls = "fa-check-square";
                value = 1;
                clsEnable = " actived";
            }
            enable = "<i class='far " + cls + "' data-val='" + value + "'></i>";
        }
    }
    catch (Exception)
    {
        Response.Redirect("/not-found");
    }
}
<div class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="header">
                <div class="row clearfix">
                    <div class="col-xs-12">
                        <h2>Chi tiết</h2>
                    </div>
                </div>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-8">
                        <div class="form-group form-float">
                            <div class="top-pic">
                                <i class="fas fa-file-invoice"></i>&nbsp;<label>Thông tin:</label>
                            </div>
                            <div class="form-line">
                                <label class="form-label">Tiêu đề:</label>
                                <div>@title</div>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <label class="form-label">Mô tả:</label>
                                <div>@summary</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/BackEnd/_script/product-provider.js"></script>
}