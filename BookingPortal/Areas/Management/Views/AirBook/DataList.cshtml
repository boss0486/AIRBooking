@* control ******************************************************************************************************@
<div class="table-responsive">
    <table class="table table-bordered table-inline">
        <thead>
            <tr>
                <th class="tbcol-id">#&nbsp;</th>
                <th class="tbcol-date">Ngày đặt</th>
                <th class="tbcol-active">M.DL</th>
                <th class="tbcol-none">Nhân viên</th>
                <th class="tbcol-none">KH</th>
                <th class="tbcol-date">Loại KH</th>
