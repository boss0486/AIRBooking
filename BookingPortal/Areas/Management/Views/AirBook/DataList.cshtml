                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="tbcol-id">#</th>
                                <th>Họ và Tên</th>
                                <th>Loại HK</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                            </tr>
                        </thead>
                        <tbody id="TblModalData"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
