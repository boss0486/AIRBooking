@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}

@using WebCore.Services;
@using WebCore.Model.Services;
@using WebCore.Model.Services;


@Html.Partial("~/Areas/Management/Views/_ViewSearchForBookItineraryPatial.cshtml", null)
@* control ******************************************************************************************************@
<div class="table-responsive">
    <table id="TblBooking" class="table table-bordered table-inline">
        <thead>
            <tr>
                <th class="tbcol-id">#&nbsp;</th>
                <th class="tbcol-date">Ngày đặt</th>
                <th class="tbcol-active">M.DL</th>
                <th class="tbcol-none">Nhân viên</th>
                <th class="tbcol-none">Hành khách</th>
                <th class="tbcol-active">Hãng</th>
                <th class="tbcol-active">L.hành trình</th>
                <th class="tbcol-none">Hành trình</th>
                <th class="tbcol-date">PNR</th>
                <th class="tbcol-active">ACT</th>
            </tr>
        </thead>
        <tbody id="TblData"></tbody>
    </table>
</div>
<div id="Pagination"></div>
@{
    if (PermissionService.CheckActionInMenuItem(Helper.Page.MetaSEO.ControllerText, WebCore.Entities.RoleActionKey.DataList))
    {
        <div class="form-group text-right att-data-list">
            <a href="@Helper.Page.Navigate.PathDataList()">
                @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    }
}
<!-- Modal -->
<div class="modal fade" id="PassengerModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title" id="exampleModalLongTitle">Thông tin hành khách</div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="tbcol-id">#</th>
                                <th>Họ và Tên</th>
                                <th>Loại HK</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                            </tr>
                        </thead>
                        <tbody id="TblModalData"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ContactModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title" id="exampleModalLongTitle">Thông tin hành khách</div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="tbcol-id">#</th>
                                <th>Họ và Tên</th>
                                <th>Loại HK</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                            </tr>
                        </thead>
                        <tbody id="TblModalData"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/Management/_script/app-book-itinerary.js"></script>
    <script type="text/javascript">
        $(function () {
            AirBookItineraryController.DataList(1);
        });
    </script>
}