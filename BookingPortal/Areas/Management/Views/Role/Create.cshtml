@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}

@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}

<div class="row">
    <div class="col-md-4">
        <label for="">Nhóm người dùng:</label>
        <div class="all-list-group list-group check-option" style="margin-bottom: 0px;">
            <div class="list-group-item">
                <label> <i data-option="0" class="fa fa-cog" aria-hidden="true"></i><span>&nbsp;Lựa chọn</span></label>
            </div>
        </div>
        <div id="ListGroup" class="list-group list-group-customize" style="height: 335px;overflow:auto;margin-bottom: 0;"></div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-label">Tiêu đề</label>
            <input id="txtTitle" name="txtTitle" maxlength="50" type="text" class="form-control" />
            <span id="lblTitle" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Mô tả</label>
            <textarea id="txtSummary" name="txtSummary" class="form-control default"></textarea>
            <span id="lblSummary" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Cấp độ:</label>
            <input id="txtLevel" name="txtLevel" maxlength="50" type="text" class="form-control" />
            <span id="lblLevel" class="message msg-box"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group m-t-5">
                    <input id="cbxIsAllowSpend" name="cbxIsAllowSpend" type="checkbox" class="filled-in" />
                    <label for="cbxIsAllowSpend">Được phép chi tiêu</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group m-t-5">
                    <input id="cbxActive" name="cbxActive" type="checkbox" class="filled-in" />
                    <label for="cbxActive">Kích hoạt</label>
                    <span id="lblActive" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-12"><hr /></div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <div class="form-group text-right">
            <button id="btnReset" class="btn btn-danger" type="reset">@Helper.Language.Resource.Label.BtnReset</button>
            <button id="btnCreate" class="btn btn-primary" type="button">@Helper.Language.Resource.Label.BtnCreate</button>
        </div>
        <div class="form-group text-right att-data-list">
            <a href="@Helper.Page.Navigate.PathDataList()">
                @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/Management/_script/user-group.js"></script>
    <script type="text/javascript">
        UserGroupController.ViewLevel(1);
    </script>
}
