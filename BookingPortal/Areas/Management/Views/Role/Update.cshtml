@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}
@using WebCore.Entities;
@using WebCore.Services;
@using WebCore.Model.Enum;

@model WebCore.Entities.Role

@{
    string id = "";
    string title = "";
    string summary = "";
    int level = 0;
    string languageId = "";
    string createdBy = "";
    string createdDate = "";
    string strIsAllowSpend = "";
    string enabled = "";
    try
    {
        if (Model != null)
        {
            id = Model.ID;
            title = Model.Title;
            summary = Model.Summary;
            level = Model.Level;
            languageId = Model.LanguageID;
            createdBy = Model.CreatedBy;
            createdDate = Convert.ToString(Model.CreatedDate);

            if (Model.IsAllowSpend)
            {
                strIsAllowSpend = "checked";
            }

            if (Model.Enabled == (int)ModelEnum.Enabled.ENABLED)
            {
                enabled = "checked";
            }
        }
    }
    catch (Exception)
    {

    }
}
<div class="row">
    <div class="col-md-4">
        <label for="">Nhóm người dùng:</label>
        <div class="all-list-group list-group check-option" style="margin-bottom: 0px;">
            <div class="list-group-item">
                <label> <i data-option="0" class="fa fa-cog" aria-hidden="true"></i><span>&nbsp;Lựa chọn</span></label>
            </div>
        </div>
        <div id="ListGroup" class="list-group list-group-customize" style="height: 335px;overflow:auto;margin-bottom: 0;"></div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-label">Tiêu đề @Model.IsAllowSpend</label>
            <input id="txtTitle" name="txtTitle" maxlength="50" type="text" class="form-control" value="@title" />
            <span id="lblTitle" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Mô tả</label>
            <textarea id="txtSummary" name="txtSummary" class="form-control default">@summary</textarea>
            <span id="lblSummary" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Cấp độ:</label>
            <input id="txtLevel" name="txtLevel" maxlength="50" type="text" class="form-control" value="@level" />
            <span id="lblLevel" class="message msg-box"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group m-t-5">
                    <input id="cbxIsAllowSpend" name="cbxIsAllowSpend" type="checkbox" class="filled-in" @strIsAllowSpend />
                    <label for="cbxIsAllowSpend">Được phép chi tiêu</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group m-t-5">
                    <input id="cbxActive" name="cbxActive" type="checkbox" class="filled-in" @enabled />
                    <label for="cbxActive">Kích hoạt</label>
                    <span id="lblActive" class="message msg-box"></span>
                </div>
            </div>
            <div class="col-md-12"><hr /></div>
        </div>

    </div>
    <div class="col-md-10">
        <div class="form-group text-right">
            <button id="btnReset" class="btn btn-danger" type="reset">@Helper.Language.Resource.Label.BtnReset</button>
            <button id="btnUpdate" class="btn btn-primary" type="button">@Helper.Language.Resource.Label.BtnUpdate</button>
        </div>
        <div class="form-group text-right att-data-list">
            <a href="@Helper.Page.Navigate.PathDataList()">
                @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<input id="txtID" type="hidden" value="@id" />
@section scripts{
    <script src="~/Areas/Management/_script/user-group.js"></script>
    <script type="text/javascript">
        var id = '@id';
        UserGroupController.ViewLevel(id,1);
    </script>
}



