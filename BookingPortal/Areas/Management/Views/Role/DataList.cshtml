@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}
@using WebCore.Model.Services;
<div class="row" data-keyenter="#btnSearch" data-datesearch="true">
    <div class="col-md-2">
        <div class="form-group">
            <a href="@Helper.Page.Navigate.PathCreate()" class="btn btn-primary">
                @Helper.Language.Resource.Label.BtnCreate
            </a>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group ">
            <select id="ddlTimeExpress" name="ddlTimeExpress" class="form-control show-tick" data-live-search="true">
                <option value="0">-Lựa chọn-</option>
                @Html.Raw(ModelService.DropdownListSearchExpress(-1))
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <div class="input-daterange input-group" id="datepicker">
            <input type="text" class="form-control" id="txtStartDate" placeholder="dd-mm-yyyy" />
            <span class="input-group-addon"><i class="far fa-arrow-alt-circle-right"></i></span>
            <input type="text" class="form-control" id="txtEndDate" placeholder="dd-mm-yyyy" />
        </div>
    </div>
    <div class="col-md-4" data-keyenter="#btnSearch">
        <div class="input-group">
            <input type="text" class="form-control" id="txtQuery" placeholder="Nhập từ khóa..." />
            <span id="btnSearch" class="input-group-addon"><i class="fa fa-search -icons"></i></span>
        </div>
    </div>
</div>

@*search control ******************************************************************************************************@
<div class="table-responsive" style="overflow-y:hidden !important; overflow-x:auto !important;">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="tbcol-id">#&nbsp;</th>
                <th class="tbcol-title">Tiêu đề</th>
                <th class="tbcol-none">Mô tả</th>
                <th class="tbcol-created">Người tạo</th>
                <th class="tbcol-active">T.Thái</th>
                <th class="tbcol-date">Ngày tạo</th>
                <th class="tbcol-action">
                    ACT &nbsp;
                    <a href="@Helper.Page.Navigate.PathCreate()">
                        <i class="fa fa-plus-square" title="create"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody id="TblData"></tbody>
    </table>
</div>
<div id="Pagination"></div>
@section scripts{
    <script src="~/Areas/Management/_script/user-group.js"></script>
    <script type="text/javascript">
        $(function () {
            UserGroupController.DataList(1);
        });
    </script>
}