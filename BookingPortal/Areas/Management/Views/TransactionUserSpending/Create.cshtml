@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}
@using WebCore.Services;
@{
    string customerCodeID = string.Empty;
}
<div class="row">
    <div class="col-md-6">
        <div class="top-pic">
            <i class="fas fa-file-invoice"></i>&nbsp;<label>T.Tin Người nhận:</label>
        </div>
        <div class="row">
            <div class="col-md-7">
                @if (!Helper.Current.UserLogin.IsCustomerLogged())
                {
                    <div class="form-group">
                        <label class="form-label">Khách hàng:</label>
                        <select id="ddlCustomer" name="ddlCustomer" class="form-control show-tick" data-live-search="true">
                            <option value="">-Lựa chọn-</option>
                            @Html.Raw(CustomerService.DropdownList(""))
                        </select>
                        <span id="lblCustomer" class="message msg-box"></span>
                    </div>
                }
                else
                {
                    CustomerService customerService = new CustomerService();
                    var customer = customerService.GetCustomerModel(Helper.Current.UserLogin.IdentifierID);
                    if (customer != null)
                    {
                        customerCodeID = customer.CodeID;
                        <div class="form-group">
                            <label class="form-label">Khách hàng:</label>
                            <div class="form-control disabled">@customer.Title</div>
                            <span id="lblCustomer" class="message msg-box"></span>
                        </div>
                    }

                }

            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="form-label">MKH:</label>
                    <div class="form-control disabled" style="background: #FFE5F1"><label id="lblCustomerCodeID">@customerCodeID</label></div>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-md-7">
                <div class="form-group">
                    <label class="form-label">Nhân viên:</label>
                    <select id="ddlEmployee" name="ddlEmployee" class="form-control show-tick" data-live-search="true">
                        <option value="">-Lựa chọn-</option>
                    </select>
                    <span id="lblEmployee" class="message msg-box"></span>
                </div>

            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="form-label">&nbsp;</label>
                    <div class="form-control disabled"><label id="lblCustomerCodeID">---</label></div>
                </div>
            </div>
        </div>
