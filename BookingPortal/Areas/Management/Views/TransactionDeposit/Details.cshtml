@using WebCore.Entities;
@using WebCore.Services;
@using WebCore.ENM;
@using WebCore.Model.Enum;
@using WebCore.Model.Services

@using Helper.Language;
@using Helper.TimeData;
@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}

@model WebCore.Entities.TransactionDepositResult

@{
    string id = "";
    string customerId = "";
    string title = "";
    string alias = "";
    string summary = "";
    string transactionCode = "";
    string agentSentCode = "";
    string agentReceivedCode = "";

    string bankSentID = "";
    string bankSentCode = "";
    string bankSentNumber = "";
    string bankReceivedId = "";
    string bankReceivedCode = "";
    string bankReceivedNumber = "";

    string receivedDate = "";
    double amount = 0;
    int status = 0;
    string languageId = "";
    string createdBy = "";
    string createdDate = "";
    string enabled = "None";
    string transactionType = string.Empty;


    if (Model != null)
    {
        id = Model.ID;

        customerId = Model.ID;
        title = Model.Title;
        alias = Model.Alias;
        summary = Model.Summary;
        transactionCode = Model.TransactionCode;
        agentSentCode = Model.AgentSentCode;
        agentReceivedCode = Model.AgentReceivedCode;

        bankSentID = Model.BankSentID;
        bankSentCode = Model.BankSentCode;
        bankSentNumber = Model.BankSentNumber;

        bankReceivedId = Model.BankReceivedID;
        bankReceivedCode = Model.BankReceivedCode;
        bankReceivedNumber = Model.BankReceivedNumber;

        receivedDate = Model.ReceivedDate;
        amount = Model.Amount;
        status = Model.TransactionStatus;
        //
        languageId = Model.LanguageID;
        createdBy = Model.CreatedBy;
        createdDate = Model.CreatedDate;
        enabled = "None";
    }
}

<div class="row">
    <div class="col-md-8">
        <div class="top-pic">
            <i class="fas fa-file-invoice"></i>&nbsp;<label>Thông tin:</label>
        </div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Tiêu đề: @title</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Mô tả: @summary</div>
        <div class="top-pic">
            <i class="fas fa-file-invoice"></i>&nbsp;<label>Giao dịch:</label>
        </div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Mã giao dịch: @transactionCode</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Đại lý chuyển: @agentSentCode</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Đại lý nhận: @agentReceivedCode</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Loại giao dịch: Nạp tiền</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Số tiền nạp: @Helper.Page.Library.FormatCurrency(amount) @Helper.Page.Library.FormatCurrencyUnit("VND")</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Ngân hàng chuyển: @bankSentCode , số tài khoản: @bankSentNumber</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Ngân hàng nhận: @bankReceivedCode , số tài khoản: @bankReceivedNumber</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Thời gian nhận: @receivedDate</div>
        <div class="top-pic">
            <i class="fas fa-file-invoice"></i>&nbsp;<label>Hoạt động</label>
        </div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Trạng thái: Thành công</div>
        <div class="form-group"><i class="fas fa-check-circle"></i> Ngày tạo: @createdDate</div>
        @{
            if (PermissionService.CheckActionInMenuItem(Helper.Page.MetaSEO.ControllerText, WebCore.Entities.RoleActionKey.DataList))
            {
                <div class="form-group text-right att-data-list">
                    <a href="@Helper.Page.Navigate.PathDataList()">
                        @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            }
        }
    </div>
</div>
